<?xml version="1.0" encoding="utf-8"?>
<resources>
  <declare-styleable name="MaterialFancyButton">

    <!-- Default Android attrs -->
    <attr name="android:enabled"/>
    <attr name="android:text"/>
    <attr name="android:textSize"/>
    <attr name="android:textAllCaps"/>
    <attr name="android:textStyle"/>

    <attr format="color" name="mfb_defaultColor"/>
    <attr format="string" name="mfb_text"/>

    <attr format="color" name="mfb_textColor"/>
    <attr format="color" name="mfb_iconColor"/>

    <attr format="string" name="mfb_textFont"/>
    <attr format="string" name="mfb_iconFont"/>

    <attr format="dimension" name="mfb_textSize"/>
    <attr format="integer" name="mfb_iconResource"/>
    <attr format="string" name="mfb_icon"/>
    <attr format="string" name="mfb_fontIconResource"/>
    <attr format="dimension" name="mfb_fontIconSize"/>
    <attr format="enum" name="mfb_iconPosition">
      <enum name="left" value="1"/>
      <enum name="right" value="2"/>
      <enum name="top" value="3"/>
      <enum name="bottom" value="4"/>
    </attr>

    <attr format="enum" name="mfb_textPosition">
      <enum name="left" value="1"/>
      <enum name="right" value="2"/>
      <enum name="top" value="3"/>
      <enum name="bottom" value="4"/>
    </attr>

    <attr format="enum" name="mfb_textGravity">
      <enum name="top" value="0x30"/>
      <enum name="bottom" value="0x50"/>
      <enum name="left" value="0x03"/>
      <enum name="right" value="0x05"/>
      <enum name="center_vertical" value="0x10"/>
      <enum name="fill_vertical" value="0x70"/>
      <enum name="center_horizontal" value="0x01"/>
      <enum name="fill_horizontal" value="0x07"/>
      <enum name="center" value="0x11"/>
      <enum name="fill" value="0x77"/>
      <enum name="clip_vertical" value="0x80"/>
      <enum name="clip_horizontal" value="0x08"/>
      <enum name="start" value="0x00800003"/>
      <enum name="end" value="0x00800005"/>
    </attr>

    <attr format="dimension" name="mfb_iconPaddingLeft"/>
    <attr format="dimension" name="mfb_iconPaddingRight"/>
    <attr format="dimension" name="mfb_iconPaddingTop"/>
    <attr format="dimension" name="mfb_iconPaddingBottom"/>

    <attr format="color" name="mfb_borderColor"/>
    <attr format="dimension" name="mfb_borderWidth"/>
    <attr format="color" name="mfb_focusColor"/>
    <attr format="color" name="mfb_disabledColor"/>
    <attr format="color" name="mfb_disabledTextColor"/>
    <attr format="color" name="mfb_disabledBorderColor"/>

    <attr format="dimension" name="mfb_radius"/>
    <attr format="dimension" name="mfb_radiusTopLeft"/>
    <attr format="dimension" name="mfb_radiusTopRight"/>
    <attr format="dimension" name="mfb_radiusBottomLeft"/>
    <attr format="dimension" name="mfb_radiusBottomRight"/>

    <attr format="boolean" name="mfb_textAllCaps"/>

    <attr format="boolean" name="mfb_ghost"/>
  </declare-styleable>


  <declare-styleable name="View">
    <attr name="android:background"/>
    <attr name="android:backgroundTint"/>
    <attr name="android:backgroundTintMode"/>
    <attr name="android:elevation"/>
    <attr name="android:fadeScrollbars"/>
    <attr name="android:fadingEdgeLength"/>
    <attr name="android:minHeight"/>
    <attr name="android:minWidth"/>
    <attr name="android:padding"/>
    <attr name="android:paddingBottom"/>
    <attr name="android:paddingEnd"/>
    <attr name="android:paddingLeft"/>
    <attr name="android:paddingRight"/>
    <attr name="android:paddingStart"/>
    <attr name="android:paddingTop"/>
    <attr name="android:requiresFadingEdge"/>
    <attr name="android:scrollbarDefaultDelayBeforeFade"/>
    <attr name="android:scrollbarFadeDuration"/>
    <attr name="android:scrollbarSize"/>
    <attr name="android:scrollbarStyle"/>
    <attr name="android:soundEffectsEnabled"/>
    <attr name="android:textAlignment"/>
    <attr name="android:textDirection"/>
    <attr name="android:visibility"/>
    <attr name="android:layoutDirection"/>
    <attr name="android:src"/>
  </declare-styleable>

  <declare-styleable name="TextAppearance">
    <attr name="android:textColorHighlight"/>
    <attr name="android:textColor"/>
    <attr name="android:textColorHint"/>
    <attr name="android:textColorLink"/>
    <attr name="android:textSize"/>
    <attr name="android:textStyle"/>
    <attr name="android:typeface"/>
    <attr name="android:fontFamily"/>
    <attr name="tv_fontFamily"/>
    <attr name="android:textAllCaps"/>
    <attr name="android:shadowColor"/>
    <attr name="android:shadowDx"/>
    <attr name="android:shadowDy"/>
    <attr name="android:shadowRadius"/>
    <attr name="android:elegantTextHeight"/>
    <attr name="android:fontFeatureSettings"/>
    <attr name="android:letterSpacing"/>
  </declare-styleable>

  <declare-styleable name="RippleDrawable">
    <attr format="reference|color" name="rd_backgroundColor"/>
    <attr format="reference|integer" name="rd_backgroundAnimDuration"/>
    <attr format="reference|dimension|integer" name="rd_maxRippleRadius">
      <enum name="match_view" value="0x00000000"/>
    </attr>
    <attr format="reference|color" name="rd_rippleColor"/>
    <attr format="reference|integer" name="rd_rippleAnimDuration"/>
    <attr format="reference" name="rd_inInterpolator"/>
    <attr format="reference" name="rd_outInterpolator"/>
    <attr format="integer" name="rd_maskType">
      <enum name="rectangle" value="0x00000000"/>
      <enum name="oval" value="0x00000001"/>
    </attr>
    <attr format="integer" name="rd_rippleType">
      <enum name="touch" value="0x00000000"/>
      <enum name="wave" value="0x00000001"/>
    </attr>
    <attr format="reference|dimension" name="rd_cornerRadius"/>
    <attr format="reference|dimension" name="rd_topLeftCornerRadius"/>
    <attr format="reference|dimension" name="rd_topRightCornerRadius"/>
    <attr format="reference|dimension" name="rd_bottomLeftCornerRadius"/>
    <attr format="reference|dimension" name="rd_bottomRightCornerRadius"/>
    <attr format="reference|dimension" name="rd_padding"/>
    <attr format="reference|dimension" name="rd_leftPadding"/>
    <attr format="reference|dimension" name="rd_topPadding"/>
    <attr format="reference|dimension" name="rd_rightPadding"/>
    <attr format="reference|dimension" name="rd_bottomPadding"/>
    <attr format="integer" name="rd_delayClick">
      <enum name="none" value="0x00000000"/>
      <enum name="untilRelease" value="0x00000001"/>
      <enum name="afterRelease" value="0x00000002"/>
    </attr>
    <attr format="reference|integer" name="rd_delayRipple"/>
  </declare-styleable>

  <declare-styleable name="RippleView">
    <attr name="rd_style"/>
    <attr name="rd_enable"/>
  </declare-styleable>

  <attr format="reference|string" name="tv_fontFamily"/>

  <attr format="reference" name="rd_style"/>
  <attr format="boolean" name="rd_enable"/>
</resources> 