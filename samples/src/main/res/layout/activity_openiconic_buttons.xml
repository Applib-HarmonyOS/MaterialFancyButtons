<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fancy="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

  <LinearLayout
      android:id="@+id/section1"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="vertical"
      >

    <LinearLayout
        android:id="@+id/section_facebook"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#3b5998"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:padding="20dp"
        >

      <com.rilixtech.materialfancybutton.MaterialFancyButton
          android:id="@+id/btn_login"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginBottom="10dp"
          android:padding="10dp"
          fancy:mfb_borderColor="#FFFFFF"
          fancy:mfb_borderWidth="1dp"
          fancy:mfb_defaultColor="#3b5998"
          fancy:mfb_focusColor="#5577bd"
          fancy:mfb_fontIconResource="&#xe000;"
          fancy:mfb_fontIconSize="15sp"
          fancy:mfb_iconFont="openiconic.ttf"
          fancy:mfb_iconPosition="right"
          fancy:mfb_text="Login"
          fancy:mfb_textColor="#FFFFFF"
          fancy:mfb_radius="30dp"
          />

      <com.rilixtech.materialfancybutton.MaterialFancyButton
          android:id="@+id/btn_chart"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginBottom="10dp"
          android:padding="10dp"
          fancy:mfb_borderColor="#FFFFFF"
          fancy:mfb_borderWidth="1dp"
          fancy:mfb_defaultColor="#3b5998"
          fancy:mfb_focusColor="#5577bd"
          fancy:mfb_fontIconResource="&#xe018;"
          fancy:mfb_fontIconSize="25sp"
          fancy:mfb_iconFont="openiconic.ttf"
          fancy:mfb_iconPaddingLeft="20dp"
          fancy:mfb_iconPaddingRight="0dp"
          fancy:mfb_iconPosition="right"
          fancy:mfb_text="Chart"
          fancy:mfb_textColor="#FFFFFF"
          fancy:mfb_radius="30dp"
          />

      <com.rilixtech.materialfancybutton.MaterialFancyButton
          android:id="@+id/btn_camera_slr"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginBottom="10dp"
          android:padding="10dp"
          fancy:mfb_borderColor="#FFFFFF"
          fancy:mfb_borderWidth="1dp"
          fancy:mfb_defaultColor="#3b5998"
          fancy:mfb_focusColor="#5577bd"
          fancy:mfb_fontIconResource="&#xe02c;"
          fancy:mfb_fontIconSize="25sp"
          fancy:mfb_iconFont="openiconic.ttf"
          fancy:mfb_iconPosition="right"
          fancy:mfb_text="Camera SLR"
          fancy:mfb_textColor="#FFFFFF"
          fancy:mfb_radius="30dp"
          />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/section_spotify"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#222326"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:padding="20dp"
        >
      <com.rilixtech.materialfancybutton.MaterialFancyButton
          android:id="@+id/btn_aperture"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginBottom="10dp"
          android:paddingBottom="10dp"
          android:paddingLeft="20dp"
          android:paddingRight="20dp"
          android:paddingTop="10dp"
          fancy:mfb_defaultColor="#7ab800"
          fancy:mfb_focusColor="#9bd823"
          fancy:mfb_icon="@string/opic_aperture"
          fancy:mfb_iconPosition="left"
          fancy:mfb_text="Aperture"
          fancy:mfb_textColor="#FFFFFF"
          fancy:mfb_radius="30dp"
          />

      <com.rilixtech.materialfancybutton.MaterialFancyButton
          android:id="@+id/btn_dashboard"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginBottom="10dp"
          android:paddingBottom="10dp"
          android:paddingLeft="20dp"
          android:paddingRight="20dp"
          android:paddingTop="10dp"
          fancy:mfb_defaultColor="#7ab800"
          fancy:mfb_focusColor="#9bd823"
          fancy:mfb_icon="@string/opic_dashboard"
          fancy:mfb_iconPosition="left"
          fancy:mfb_text="Dashboard"
          fancy:mfb_textColor="#FFFFFF"
          fancy:mfb_radius="30dp"
          />
      <com.rilixtech.materialfancybutton.MaterialFancyButton
          android:id="@+id/btn_hard_drive"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:paddingBottom="10dp"
          android:paddingLeft="20dp"
          android:paddingRight="20dp"
          android:paddingTop="10dp"
          fancy:mfb_borderColor="#88898c"
          fancy:mfb_borderWidth="1dp"
          fancy:mfb_defaultColor="#222326"
          fancy:mfb_focusColor="#424243"
          fancy:mfb_icon="@string/opic_hard_drive"
          fancy:mfb_text="Hard Drive"
          fancy:mfb_textColor="#dfe0d9"
          fancy:mfb_radius="30dp"
          />
    </LinearLayout>

  </LinearLayout>

</ScrollView>